<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Con Sazon</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../css/main.css">
</head>
<body>
    <div class="container ">
        <main class="content my-5">
            <div class="row justify-content-center d-flex flex-column flex-sm-row">                    
                    <div class="col-10 col-sm-6">
                        <div class="image"><img class="img-fluid" src="<%= singleRecipe.image %>" alt="image of recipe"></div>
                    </div>  
                    <div class="col-10 col-sm-6">
                        <h1 class='display-6'><%= singleRecipe.recipeName %></h1>
                        <p>by: <%= singleRecipe.author %></p>
                        <!-- prep/cook/total time -->
                      <% if (singleRecipe.totalTime) { %>
                        <div class="d-flex flex-column flex-md-row ">
                            <p>Prep: <%= singleRecipe.prepTime %></p>
                            <p>Cook: <%= singleRecipe.cookTime   %></p>
                            <p>Total: <%= singleRecipe.totalTime %></p>
                        </div>
                      <% } %>
                        <p><% if (singleRecipe.cuisine) {%> Cuisine: <%= singleRecipe.cuisine %> <% } %> </p>
                        <p> Allergens: <%= singleRecipe.allergens != 'undefined' ? singleRecipe.allergens : 'none' %>  </p>
                    </div>      
            </div>
            <div class="row">
                <div>
                    <p><%= singleRecipe.description %></p>
                </div>
                <div class="d-flex flex-column flex-md-row">
                    <div class="col-12 col-sm-6">
                        <h2>Ingredients</h2>
                        <% for (item of singleRecipe.ingredients) { %>
                            <p><span><%= item.quantity %></span> <%= item.name %> <span><% if (item.optional == 'yes') { %> (optional) <% } %></span><span><% item.notes %></span></p>
                        <% } %>
                    </div>
                    <div class="col-12 col-sm-6">
                        <h2>Instructions</h2>
                        <% for (item of singleRecipe.instructions) { %>
                            <p><%= item.text %></p>
                        <% } %>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <%- include('../partials/footer') -%>
</body>
</html>