<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Con Sazon | All Recipes</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <% if (user) { %>
        <%- include("../partials/header-logout") %> 
   <% } else { %>
        <%-  include("../partials/header") %>
   <% } %>
    <section class="p-4">
        <div class="container">
            <h1 class="display-4">All Recipes</h1>
            <section class="content my-5">
                <div class="row gx-4 gx-sm-5">
                    <% for (let recipe of recipes) { %>
                        <div class="col-6 col-sm-4 col-md-3 col-xxl-2">
                            <div>
                                <a href="/recipes/<%= recipe.path %>"><img class="img-fluid" src="<%= recipe.image %>" alt="image of recipe"></a>
                            </div>
                            <h3 class="h5" data-id="<%= recipe._id %>"><%= recipe.recipeName %></h3>
                            <p><%= recipe.author %></p>
                        </div>
                    <% }  %>
                </div>
            </section>
        </div>
    </section>
    <%- include('../partials/footer') -%>
</body>
</html>
